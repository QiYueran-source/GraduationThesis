FROM python:3.12-slim

# 安装系统依赖 - 正确配置阿里云源
RUN apt-get update && apt-get install -y --no-install-recommends \
# RUN echo "deb http://mirrors.aliyun.com/debian/ bookworm main non-free contrib" > /etc/apt/sources.list \
#    && echo "deb-src http://mirrors.aliyun.com/debian/ bookworm main non-free contrib" >> /etc/apt/sources.list \
#    && echo "deb http://mirrors.aliyun.com/debian-security bookworm-security main" >> /etc/apt/sources.list \
#    && echo "deb-src http://mirrors.aliyun.com/debian-security bookworm-security main" >> /etc/apt/sources.list \
#    && echo "deb http://mirrors.aliyun.com/debian/ bookworm-updates main non-free contrib" >> /etc/apt/sources.list \
#    && echo "deb-src http://mirrors.aliyun.com/debian/ bookworm-updates main non-free contrib" >> /etc/apt/sources.list \
#    && echo "deb http://mirrors.aliyun.com/debian/ bookworm-backports main non-free contrib" >> /etc/apt/sources.list \
#    && echo "deb-src http://mirrors.aliyun.com/debian/ bookworm-backports main non-free contrib" >> /etc/apt/sources.list \
#    && apt-get update && apt-get install -y --no-install-recommends \
    apt-transport-https \
    ca-certificates \
    curl \
    wget \
    git \
    libgomp1 \
    procps \
    net-tools \
    iproute2 \
    sudo\
    && rm -rf /var/lib/apt/lists/*

# 创建工作目录
WORKDIR /Node

# 创建非root用户并配置sudo权限
RUN useradd --create-home --shell /bin/bash agentuser && \
    chown -R agentuser:agentuser /Node && \
    usermod -aG sudo agentuser && \
    echo "agentuser ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/agentuser && \
    chmod 0440 /etc/sudoers.d/agentuser

# 复制应用代码
COPY . .

# 创建日志目录和数据目录，并设置权限  
RUN mkdir -p logs data && \
    chmod 755 logs data && \
    chown -R agentuser:agentuser logs data && \
    touch logs/frpc.log && \
    chown agentuser:agentuser logs/frpc.log

# 设置所有脚本的执行权限 
RUN chmod +x scripts/*.sh

# frp执行权限 
RUN chmod +x frp/frpc

# CMD命令启动frp客户端并启动worker进程  
COPY start.sh /start.sh
RUN chmod +x /start.sh

# 设置完权限后，切换到非root用户  
USER agentuser

# 安装Python依赖 (使用国内源加速)
RUN pip install --no-cache-dir -r requirements.txt \
    --index-url https://pypi.tuna.tsinghua.edu.cn/simple \
    --trusted-host pypi.tuna.tsinghua.edu.cn
    


# 设置环境变量
ENV PYTHONPATH=/Node
ENV PYTHONUNBUFFERED=1
ENV NODE_TYPE=agent_trainer

# 暴露端口（用于接受启动任务）
EXPOSE 8192-8220

# 健康检查（暂时注释掉，因为health_check.py文件不存在）
# HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
#     CMD python scripts/health_check.py || exit 1

# 启动脚本 
# Entrypoint 会在容器启动时执行，相对的RUN在构建镜像时执行  
ENTRYPOINT ["/start.sh"]