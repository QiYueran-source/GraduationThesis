FROM python:3.12-slim

# 安装系统依赖
RUN echo "deb http://deb.debian.org/debian bookworm main contrib non-free" > /etc/apt/sources.list && \
    echo "deb http://deb.debian.org/debian-security bookworm-security main contrib non-free" >> /etc/apt/sources.list && \
    echo "deb http://deb.debian.org/debian bookworm-updates main contrib non-free" >> /etc/apt/sources.list && \
    sed -i 's|http://deb.debian.org|http://mirrors.ustc.edu.cn|g' /etc/apt/sources.list && \
    apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    libgomp1 \
    procps \
    sudo \
    net-tools \
    iproute2 \
    lsof \
    vim \
    nano \
    && rm -rf /var/lib/apt/lists/*

# 创建工作目录
WORKDIR /Node

# 创建非root用户并配置sudo权限
RUN useradd --create-home --shell /bin/bash agentuser && \
    chown -R agentuser:agentuser /Node && \
    usermod -aG sudo agentuser && \
    echo "agentuser ALL=(ALL) NOPASSWD:ALL" > /etc/sudoers.d/agentuser && \
    chmod 0440 /etc/sudoers.d/agentuser
USER agentuser

# 复制依赖文件
COPY requirements.txt .

# 安装Python依赖 (使用国内源加速)
RUN pip install --no-cache-dir -r requirements.txt \
    --index-url https://pypi.tuna.tsinghua.edu.cn/simple \
    --trusted-host pypi.tuna.tsinghua.edu.cn
    
# 复制应用代码
COPY . .

# 创建日志目录
RUN mkdir -p logs data

# 设置环境变量
ENV PYTHONPATH=/Node
ENV PYTHONUNBUFFERED=1
ENV NODE_TYPE=agent_trainer

# 暴露端口（用于接受启动任务）
EXPOSE 8192

# 健康检查（暂时注释掉，因为health_check.py文件不存在）
# HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
#     CMD python scripts/health_check.py || exit 1

# 启动frp服务
CMD ["/Node/frp/frpc", "-c", "/Node/frp/frpc.toml"]

# 启动命令
CMD ["python", "worker.py"]

# 开发环境设置 
CMD ["sleep", "infinity"]